<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="javaeepp.mihuyou.mapper.removeGoodsMapper">
   <select id="getGoodsDetail" resultType="javaeepp.mihuyou.entity.Goods">
--        SELECT * FROM goods
--        where GoodsPullOff = '1'
    SELECT * FROM goods
	    INNER JOIN goodspicture gp ON gp.GoodsId = goods.GoodsId
        where GoodsPullOff = '1'
   </select>

    <select id="getAGoodPicture" resultType="javaeepp.mihuyou.entity.Goods">
        SELECT * FROM goodspicture
       where GoodsId = '${GoodsId}'
    </select>
</mapper>